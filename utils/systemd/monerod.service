[Unit]
Description=CiberLimb Full Node
After=network.target

[Service]
User=cyxion
Group=cyxion
WorkingDirectory=~
StateDirectory=cyxion
LogsDirectory=cyxion

Type=simple
ExecStart=/usr/bin/cyxiond --config-file /etc/cyxiond.conf --non-interactive
StandardOutput=null
StandardError=null

Restart=always

[Install]
WantedBy=multi-user.target
